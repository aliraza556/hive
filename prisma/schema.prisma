generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // Primary key - auto-generated for internal use
  id             String   @id @default(cuid())
  
  // User identification
  ownerPubKey    String   @unique @map("owner_pubkey")
  ownerAlias     String?  @map("owner_alias")

  // Authorization
  role           UserRole @default(USER)
  
  // Profile information
  name           String?
  description    String?
  avatar         String?
  
  // Timestamps
  createdAt      DateTime @default(now()) @map("created")
  updatedAt      DateTime @updatedAt @map("updated")
  
  // Soft delete
  deleted        Boolean  @default(false)
  
  // Activity tracking
  lastLoginAt    DateTime? @map("last_login")
  
  // Lightning Network specific
  ownerRouteHint String?   @map("owner_route_hint")

  @@map("users")
}

// Role Enums
enum UserRole {
  USER          // Regular user
  ADMIN         // System administrator
  MODERATOR     // Content moderator
  SUPER_ADMIN   // Super admin with all permissions
}