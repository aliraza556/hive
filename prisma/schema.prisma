generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  ownerPubKey    String    @unique @map("owner_pubkey")
  ownerAlias     String?   @map("owner_alias")
  role           UserRole  @default(USER)
  name           String?
  description    String?
  avatar         String?
  jwtToken       String?   @map("jwt_token")
  jwtExpiresAt   DateTime? @map("jwt_expires_at")
  createdAt      DateTime  @default(now()) @map("created")
  updatedAt      DateTime  @updatedAt @map("updated")
  deleted        Boolean   @default(false)
  lastLoginAt    DateTime? @map("last_login")
  ownerRouteHint String?   @map("owner_route_hint")

  @@map("users")
}

model AuthChallenge {
  id        String   @id @default(cuid())
  challenge String   @unique
  pubKey    String?  @map("pub_key")
  status    Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  expiresAt DateTime @map("expires_at")

  @@map("auth_challenges")
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
  SUPER_ADMIN
}
